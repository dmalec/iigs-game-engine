{
  "name": "iigs-three-level-demo",
  "version": "1.0.0",
  "description": "A sample to play with overlay effects and three-level rendering",
  "main": "index.js",
  "config": {
    "merlin32": "C:\\Programs\\IIgsXDev\\bin\\Merlin32-1.1.10.exe",
    "cadius": "C:\\Programs\\IIgsXDev\\bin\\Cadius.exe",
    "gsport": "C:\\Programs\\gsport\\gsport_0.31\\GSPort.exe",
    "macros": "../../macros",
    "crossrunner": "C:\\Programs\\Crossrunner\\Crossrunner.exe",
    "png2iigs": "../../tools/png2iigs.js",
    "tiled2iigs": "../../tools/tiled2iigs.js"
  },
  "scripts": {
    "test": "npm run build && build-image.bat %npm_package_config_cadius% && %npm_package_config_gsport%",
    "debug": "%npm_package_config_crossrunner% GTEThree -Source GTEThree_S02_MAINSEG_Output.txt -Debug -CompatibilityLayer",
    "build": "%npm_package_config_merlin32% -V %npm_package_config_macros% App.s",
    "build:moon": "node %npm_package_config_png2iigs% ./assets/moon.png ./gen/moon.bin --greyscale",
    "build:fog": "node %npm_package_config_png2iigs% ./assets/fog.png ./gen/fog.bin --greyscale",
    "build:map": "node %npm_package_config_tiled2iigs% ../sprites/assets/tiled/world_1-1.json --force-masked --output-dir ./gen",
    "build:tiles": "node %npm_package_config_png2iigs% ../shell/assets/tilesets/smb-256-128-4bpp.png --max-tiles 360 --as-tile-data --transparent-color FF00FF --background-color 000000 --greyscale > ./gen/App.TileSet.s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lscharen/iigs-game-engine.git"
  },
  "author": "Lucas Scharenbroich",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/lscharen/iigs-game-engine/issues"
  },
  "homepage": "https://github.com/lscharen/iigs-game-engine#readme",
  "devDependencies": {
    "pngjs": "^6.0.0",
    "string-builder": "^0.1.8",
    "watch": "latest",
    "xml2json": "^0.12.0"
  }
}
